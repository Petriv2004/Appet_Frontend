<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <include layout="@layout/toolbar" />

        <Spinner
            android:id="@+id/spinnerMascotas"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="10dp"
            android:layout_height="wrap_content"
            android:hint="Mascota"
            android:textSize="16sp"
            android:background="@drawable/border_white"/>

        <Button
            android:id="@+id/btn"
            style="@style/BorderButton"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="60dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:onClick="onClickStats"
            android:text="Ver EstadÃ­sticas" />

        <TextView
            android:id="@+id/textVisitas"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:text="Visitas al Veterinario:" />

        <TextView
            android:id="@+id/textRecorridos"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:text="Recorridos en total:" />

        <TextView
            android:id="@+id/textRitmoAlto"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:text="Ritmo cardiaco mas alto alcanzado:" />

        <TextView
            android:id="@+id/textRitmoBajo"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:text="Ritmo cardiaco mas bajo alcanzado:" />

        <EditText
            android:id="@+id/etFecha"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="10dp"
            android:layout_height="wrap_content"
            android:hint="Fecha"
            android:textSize="16sp"
            android:focusable="false"
            android:inputType="none"
            android:background="@drawable/border_white"/>


        <Button
            android:id="@+id/btnRitmo"
            style="@style/BorderButton"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="60dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:onClick="onClickStats"
            android:text="Ver Promedio" />

        <TextView
            android:id="@+id/textFechaRitmo"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:gravity="center"
            android:text="Eliga una fecha y mascota para conocer el promedio de ritmo cardiaco por fecha" />

        <TextView
            android:id="@+id/textRecorridosMes"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:gravity="center"
            android:text="Y para conocer los recorridos realizados en ese mes" />


    </LinearLayout>

</ScrollView>